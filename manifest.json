{
    "manifest_version": 2,
    "name": "Emphasize",
    "version": "0.1.0",
    "description": "Browser extension for advanced text search in web pages",

    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],

    "background": {
        "scripts": [
            "vendor/ajv.min.js",
            "vendor/sanitize-html.min.js",

            "common/namespaces.js",
            "common/errors.js",
            "common/prome.js",
            "common/event.js",
            "common/job.js",
            "common/bgchannel.js",
            
            "communication/protocol.js",
            "communication/parse.js",
            "communication/request.js",

            "storage/setupstore.js",
            "storage/facestore.js",

            "administration/registration.js",

            "annotation/marker.js",

            "popup/menu.js",
            "popup/menucontainer.js",

            "tests/tests.js"
        ],
        "persistent": false
     },

    "browser_action": {
        "default_icon": "popup/popup.png",
        "default_popup": "popup/popup.html"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "externally_connectable": {
        "matches": ["http://localhost:8080/*"]
    }
}
