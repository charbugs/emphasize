{
    "manifest_version": 2,
    "name": "Vink",
    "version": "0.1.0",
    "description": "A framework for highlighting text in web pages",

    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],

    "background": {
        "scripts": [ 
            "markerdb.js",
            "request.js", 
            "proxy.js",
			"uilogic.js"
        ],
        "persistent": false
     },

    "browser_action": {
        "default_icon": "menu.png",
        "default_popup": "uidisplay.html"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
