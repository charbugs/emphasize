{
    "manifest_version": 2,
    "name": "Emphasize",
    "version": "0.1.0",
    "description": "Browser extension for advanced text search in web pages",

    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],

    "background": {
        "scripts": [
            "lib/ajv.min.js",
            "lib/sanitize-html.min.js",

            "src/common/namespace.js",
            "src/common/errors.js",
            "src/common/prome.js",
            "src/common/event.js",
            "src/common/job.js",
            
            "src/background/injection.js",
            "src/background/messaging.js",
            
            "src/background/remote/protocol.js",
            "src/background/remote/parse.js",
            "src/background/remote/request.js",

            "src/background/storage/setupstore.js",
            "src/background/storage/facestore.js",

            "src/background/registration.js",
            "src/background/marker.js",

            "src/background/menu/menu.js",
            "src/background/menu/menucontainer.js"
        ],
        "persistent": false
     },

    "browser_action": {
        "default_icon": "src/popup/popup.png",
        "default_popup": "src/popup/popup.html"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "externally_connectable": {
        "matches": ["http://localhost:8080/*"]
    }
}
