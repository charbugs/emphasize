{
    "manifest_version": 2,
    "name": "Vink",
    "version": "0.1.0",
    "description": "A framework for highlighting text in web pages",

    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],

    "background": {
        "scripts": [
            "background/event.js",
            "background/parser.js",
            "background/db.js",
            "background/external.js",
            "background/request.js",
            "background/proxy.js",
			"background/models.js"
        ],
        "persistent": false
     },

    "browser_action": {
        "default_icon": "popup/menu.png",
        "default_popup": "popup/views.html"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "externally_connectable": {
        "matches": ["http://localhost:8080/*"]
    }
}
