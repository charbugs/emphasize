{
    "manifest_version": 2,
    "name": "Vink",
    "version": "0.1.0",
    "description": "A framework for highlighting text in web pages",

    "permissions": [
        "activeTab",
        "storage",
        "http://*/",
        "https://*/"    
    ],

    "background": {
        "scripts": [
            "tests.js", 
            "init.js", 
            "markerdb.js",
            "request.js", 
            "extension-control.js"
        ],
        "persistent": false
     },

    "browser_action": {
        "default_icon": "menu.png",
        "default_popup": "menu.html"
    }
}
