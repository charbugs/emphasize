{
    "manifest_version": 2,
    "name": "Vink",
    "version": "0.1.0",
    "description": "A framework for highlighting text in web pages",

    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],

    "background": {
        "scripts": [
            "event.js",
            "parser.js",
            "markerdb.js",
            "external.js",
            "request.js",
            "proxy.js",
			"menumodels.js"
        ],
        "persistent": false
     },

    "browser_action": {
        "default_icon": "menu.png",
        "default_popup": "menuviews.html"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "externally_connectable": {
        "matches": ["http://localhost:8080/*"]
    }
}
