{
    "manifest_version": 2,
    "name": "Emphasize",
    "version": "0.1.0",
    "description": "Browser extension for advanced text search in web pages",

    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],

    "background": {
        "scripts": [
            "lib/ajv.min.js",
            "lib/sanitize-html.min.js",

            "src/common/Namespace.js",
            "src/common/Errors.js",
            "src/common/Prome.js",
            "src/common/Event.js",
            "src/common/Job.js",
            
            "src/background/Injection.js",
            "src/background/Messaging.js",
            
            "src/background/remote/Protocol.js",
            "src/background/remote/Parser.js",
            "src/background/remote/Request.js",

            "src/background/SetupStore.js",
            "src/background/Registration.js",
            "src/background/Marker.js",

            "src/background/menu/MenuData.js",
            "src/background/menu/MenuDataContainer.js",

            "src/background/Init.js"
        ],
        "persistent": false
     },

    "browser_action": {
        "default_icon": "src/popup/menu.png",
        "default_popup": "src/popup/menu.html"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "externally_connectable": {
        "matches": ["http://localhost:8080/*"]
    },

    "web_accessible_resources": [
        "lib/fonts/roboto/*"
    ]
}
